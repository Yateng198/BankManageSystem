<Window x:Class="BankManageSystem.MyAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankManageSystem"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MyAccount" Height="450" Width="800">
    <Grid>
        <Button x:Name="deposit" Content="Deposit" HorizontalAlignment="Left" Background="{x:Null}" Margin="556,47,0,0" VerticalAlignment="Top" FontSize="16" Height="35" Width="115" Click="deposit_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="withdrawal" Content="Withdrawal" HorizontalAlignment="Left" Background="{x:Null}" Margin="556,108,0,0" VerticalAlignment="Top" FontSize="16" Height="35" Width="115" Click="withdrawal_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Transfer" Content="Transfer" HorizontalAlignment="Left" Background="{x:Null}" Margin="556,175,0,0" VerticalAlignment="Top" FontSize="16" Height="35" Width="115" Click="Transfer_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Date Of Birth: " HorizontalAlignment="Left" Margin="101,156,0,0" VerticalAlignment="Top" FontSize="16" Width="127"/>
        <Label Content="Country:" HorizontalAlignment="Left" Margin="101,193,0,0" VerticalAlignment="Top" FontSize="16" Width="86"/>
        <Label Content="Phone Number:" HorizontalAlignment="Left" Margin="101,225,0,0" VerticalAlignment="Top" FontSize="16" Width="127"/>
        <Label Content="Card Number:" HorizontalAlignment="Left" Margin="101,262,0,0" VerticalAlignment="Top" FontSize="16" Width="127"/>
        <Label Content="Balance:" HorizontalAlignment="Left" Margin="101,298,0,0" VerticalAlignment="Top" FontSize="16" Width="127"/>
        <TextBlock x:Name="username" HorizontalAlignment="Left" Margin="108,120,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" FontSize="16">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="useremail" HorizontalAlignment="Left" Margin="108,49,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" FontSize="16" Width="176">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="userage" HorizontalAlignment="Left" Margin="262,160,0,0" TextWrapping="Wrap" Text="DOB" VerticalAlignment="Top" FontSize="16" Width="155">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="usercountry" HorizontalAlignment="Left" Margin="262,198,0,0" TextWrapping="Wrap" Text="Country" VerticalAlignment="Top" FontSize="16" Width="155">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="userphonenumber" HorizontalAlignment="Left" Margin="262,230,0,0" TextWrapping="Wrap" Text="Mobile" VerticalAlignment="Top" FontSize="16" Width="155">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="usercardnumber" HorizontalAlignment="Left" Margin="262,267,0,0" TextWrapping="Wrap" Text="AccountNumber" VerticalAlignment="Top" FontSize="16" Width="155">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="amount" HorizontalAlignment="Left" Margin="262,303,0,0" TextWrapping="Wrap" Text="Balance" VerticalAlignment="Top" FontSize="16" Width="160">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="108,84,0,0" Text="Welcom" VerticalAlignment="Top" FontStyle="Italic" FontSize="16" Width="120" TextAlignment="Justify" LineHeight="16" TextWrapping="Wrap" FontWeight="DemiBold"/>
        <Button x:Name="list" Content="Transactions" HorizontalAlignment="Left" Background="{x:Null}" Margin="556,239,0,0" VerticalAlignment="Top" FontSize="16" Height="35" Width="115">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="exit" Content="Log Out" HorizontalAlignment="Left" Background="{x:Null}" Margin="556,300,0,0" VerticalAlignment="Top" FontSize="16" Height="36" Width="115" Click="exit_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>



    
    
